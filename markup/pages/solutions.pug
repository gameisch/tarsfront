doctype html
html(class="no-js", lang="en")

    include ../components/head/head
    include ../components/header/header
    include ../components/footer/footer
    include ../components/hero/hero
    include ../components/label/label
    include ../components/features/features
    include ../components/hook/hook
    include ../components/state/state
    include ../components/gallery/gallery
    include ../components/cases/cases
    include ../components/testimonials/testimonials
    include ../components/contacts/contacts
    include ../components/roi/roi

    head
        +head(head.defaults)
    body
        |%=symbols=%
        .-content-
            +header
            -
                var heroData = {
                    header: 'Solutions<span>.</span>',
                    sHeader: 'HOMEPAGES',
                    klass: 'hero--small'
                }
            +hero(heroData)
            +label
            +features({type: 0})
            +hook
            +state({image: '%=static=%img/content/state-1.png'})
            +state({image: '%=static=%img/content/state-2.png', reverse: true, grey: true})
            +gallery
            +cases
            +roi
            +testimonials
            +contacts

        +footer


        script(src='%=static=%js/separate-js/svg4everybody.min.js')
        script svg4everybody();

        script(src='%=static=%js/separate-js/jquery-3.2.1.min.js')
        script(src='%=static=%js/main%=hash=%%=min=%.js')
